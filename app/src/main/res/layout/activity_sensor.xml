<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingHorizontal="10dp"
    tools:context=".SensorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/cartasensor1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/esquinas_redondeadas2"
                tools:ignore="MissingConstraints"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="25dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nombre_sensor1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sensor de Sonido"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/senalsonido"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:background="@drawable/esquinas_redondeadas"
                            android:orientation="vertical" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/detalles_sensor1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medición en decibelios"
                        android:textColor="#BCFFFFFF"
                        android:textSize="19dp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/valorsensor1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="250"
                            android:textColor="#FFFFFF"
                            android:textSize="60dp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="dB"
                            android:textColor="#C3FFFFFF"
                            android:textSize="40dp"
                            android:textStyle="italic" />

                        <ImageView
                            android:id="@+id/imagensonido"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:paddingEnd="0dp"
                            android:src="@drawable/sonido" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/cartasensor2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/esquinas_redondeadas"
                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="25dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/nombre_sensor2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sensor de Gases"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:id="@+id/senalgas"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:background="@drawable/esquinas_redondeadas"
                            android:orientation="vertical" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/detalles_sensor2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Partes por millón (Propano)"
                        android:textColor="#BCFFFFFF"
                        android:textSize="19dp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/valorsensor2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="250"
                            android:textColor="#FFFFFF"
                            android:textSize="60dp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ppm"
                            android:textColor="#C3FFFFFF"
                            android:textSize="40dp"
                            android:textStyle="italic" />

                        <ImageView
                            android:id="@+id/imagengas"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:paddingEnd="0dp"
                            android:src="@drawable/gas" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <Button
                android:id="@+id/button_sensores"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/esquinas_redondeadas3"
                android:backgroundTint="#227C3F"
                android:text="Regresar"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>