<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".RemoteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/esquinas_redondeadas3"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Led"
                    android:textColor="#FFFFFF"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/cartadispositivo"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/esquinas_redondeadas2"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/valorestadodispositivo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Estado"
                        android:textColor="#FFFFFF"
                        android:textSize="50sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <Button
                    android:id="@+id/custom_button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/custom_button" />

                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/esquinas_redondeadas3"
                    android:backgroundTint="#8CD4D0DA"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switch_enable_button"
                        android:layout_width="116dp"
                        android:layout_height="45dp"
                        android:checked="true"
                        android:text="Activar"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                </LinearLayout>


            </LinearLayout>


            <!--        <Button-->
            <!--            android:id="@+id/button_dispositivo"-->
            <!--            android:layout_width="250dp"-->
            <!--            android:layout_height="60dp"-->
            <!--            android:layout_gravity="center_horizontal"-->
            <!--            android:layout_marginTop="40dp"-->
            <!--            android:background="@drawable/esquinas_redondeadas3"-->
            <!--            android:backgroundTint="#227C3F"-->
            <!--            android:text="Regresar"-->
            <!--            android:textStyle="bold"-->
            <!--            android:textSize="20dp"-->
            <!--            android:textColor="#FFFFFF"-->
            <!--            android:layout_marginBottom="50dp"/>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/esquinas_redondeadas3"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Motor"
                    android:textColor="#FFFFFF"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/cartadispositivo2"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/esquinas_redondeadas2"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/valorestadodispositivo2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Estado"
                        android:textColor="#FFFFFF"
                        android:textSize="50sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <Button
                    android:id="@+id/custom_button2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/custom_button" />

                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/esquinas_redondeadas3"
                    android:backgroundTint="#8CD4D0DA"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switch_enable_button2"
                        android:layout_width="116dp"
                        android:layout_height="45dp"
                        android:checked="true"
                        android:text="Activar"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button_dispositivo"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/esquinas_redondeadas3"
                android:backgroundTint="#227C3F"
                android:text="Regresar"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
